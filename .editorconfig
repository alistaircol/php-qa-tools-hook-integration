root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 2

[*.php]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_size = 4

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
# https://stackoverflow.com/a/16945143/5873008
indent_style = tab
